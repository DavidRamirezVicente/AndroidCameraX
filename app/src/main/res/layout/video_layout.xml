<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
    
    <ImageButton
        android:id="@+id/capture"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:src="@drawable/baseline_fiber_manual_record_24"
        android:scaleType="centerCrop"
        android:background="@color/material_dynamic_neutral100"
      />

    <ImageButton
        android:id="@+id/flash"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:background="@color/material_dynamic_neutral100"
        android:src="@drawable/baseline_flash_on_24"
        />

    <ImageButton
        android:id="@+id/rotate"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:background="@color/material_dynamic_neutral100"
        android:src="@drawable/baseline_flip_camera_android_24"
        android:layout_below="@+id/flash"
        />

    






</RelativeLayout>